<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Bookmark Information -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/bookmarkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmark Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookmarkPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmark Phone Number"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/bookmarkAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmark Address"
            android:textSize="14sp"
            android:textColor="@color/gray" />
    </LinearLayout>

    <!-- Close Button -->
    <Button
        android:id="@+id/closeButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Close Bookmark" />
</RelativeLayout>