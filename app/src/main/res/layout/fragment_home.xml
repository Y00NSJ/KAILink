<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- User Profile Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Image -->

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Profile Image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_placeholder"
                />
<!--
            <Button
                android:id="@+id/BtnProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle_button"
                android:text="+"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
-->
            <Button
                android:id="@+id/BtnEditProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_edit"

                android:layout_gravity="bottom"/>


            <!-- Button Over Image -->
        </FrameLayout>

        <!-- Text Information -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/BtnEditName"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="28dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@null"
                />
            <Button
                android:id="@+id/BtnEditName"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_edit"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/userName"
                />
            />
            <EditText
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:textSize="18sp"
                android:layout_marginStart="90dp"
                android:textColor="@color/gray"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@null"
                />


    </FrameLayout>



        <!-- Bookmark Section -->
        <TextView
            android:id="@+id/My_Bookmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Bookmarks"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookmarkRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/My_Bookmarks"
            app:layout_constraintBottom_toTopOf="@id/clearButton"
            android:scrollbars="vertical" />

        <!-- Settings or Logout -->
        <Button
            android:id="@+id/clearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Bookmarks"
            android:textStyle="bold"
            android:backgroundTint="#264D8D"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>